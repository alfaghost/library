<h1>All authors</h1>
<%= link_to 'Add author', new_author_path, class: 'btn btn-success' %>
<table class="table table-striped table-hover ">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>BIO</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @authors.each do |author| %>
      <tr>
        <td><%= author.id %></td>
        <td><%= link_to author.name, author %></td>
        <td><%= author.bio %></td>
        <td>
          <%= link_to edit_author_path(author),
                      class: "btn btn-default" do %>
              <i class="glyphicon glyphicon-pencil"></i>
          <% end %>
          <%= link_to author, method: :delete,
                      data: { confirm: "You sure?" },
                      class: "btn btn-danger" do %>
              <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate %>
